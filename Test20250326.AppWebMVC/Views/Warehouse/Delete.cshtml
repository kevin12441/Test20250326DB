@model Test20250326.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Eliminar Almacén";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mb-3 text-danger">Eliminar Almacén</h1>
            <div class="alert alert-warning" role="alert">
                <h3 class="alert-heading">¿Estás seguro de que deseas eliminar este almacén?</h3>
                <p class="mb-0">Esta acción no se puede deshacer.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Detalles del Almacén</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.WarehouseName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.WarehouseName)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-danger btn-lg flex-grow-1">
                            <i class="bi bi-trash me-2"></i>Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg flex-grow-1">
                            <i class="bi bi-arrow-left-circle me-2"></i>Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

